<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/listSpaceSize"
    android:paddingEnd="@dimen/listSpaceSize"
    tools:visibility="visible">

    <com.crystal.module_base.common.view.textview.NTextView
        android:id="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        app:typeface="fzdb1Typeface"
        tools:text="本周榜单" />

    <com.crystal.module_base.common.view.textview.NTextView
        android:id="@+id/tvRightText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivInto1"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="fzdb1Typeface"
        tools:text="查看全部" />

    <ImageView
        android:id="@+id/ivInto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_into_blue_24dp"
        app:layout_constraintBottom_toBottomOf="@id/tvRightText1"
        app:layout_constraintTop_toTopOf="@id/tvRightText1"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>